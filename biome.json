{
  "$schema": "https://biomejs.dev/schemas/2.3.13/schema.json",
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "**/*",
      "!!**/node_modules",
      "!!**/dist",
      "!!**/.turbo",
      "!!**/.pnpm-store",
      "!!**/vendor"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "assist": {
    "enabled": true
  }
}
